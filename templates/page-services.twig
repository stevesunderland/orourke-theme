{% extends "templates/base.twig" %}

{% block content %}
    {% for post in posts %}

        {% include 'templates/partials/hero.twig' %}

        <section id="content">
            <div class="row expanded small-up-1 medium-up-3 grid">
                {% for item in services %}
                    <div class="column text-center">
                        <a href="{{ item.link }}">
                            <div class="item cover" data-bg="{{ item.thumbnail.src|resize(600,600) }}" style="margin:0.1em;">
                                <div class="table">
                                    <div class="cell overlay">
                                        <div class="padding">
                                            <h4>
                                                {{ item }}
                                            </h4>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </a>
                    </div>
                {% endfor %}
            </div>
        </section>
    {% endfor %}
{% endblock %}