{% extends "templates/base.twig" %}

{% block content %}

	{% include 'templates/hero.twig' %}

	<section class="grid">
		<div class="row expanded collapse small-up-1 medium-up-3">
			{% for item in portfolio %}
				<div class="column text-center">
					<a href="{{ item.link }}">
						<pre></pre>
						<div class="item cover" data-bg="{{ item.get_field('gallery')[0].url|default(item.thumbnail) }}"  style="margin:0.5em;">
							<div class="table">
								<div class="cell overlay">
									<div class="padding">
										<h4>
											{{ item }}
										</h4>
									</div>
								</div>
							</div>
						</div>
					</a>
				</div>
			{% endfor %}
		</div>
	</section>
{% endblock %}