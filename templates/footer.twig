<footer class="bg-gray">
	<div class="row expanded">
		<div class="column medium-4">
			<img src="{{ site.url }}/wp-content/themes/orourke-twig/assets/images/orourke-logo-black.svg" alt="" style="height: 30px; width: 150px; margin: 0 0 1em;">
			<address>
				7 Prince Place<br>
				Newburyport MA<br>
				978.465.5955<br>
				<a href="mailto:hello@orourkehospitality.com">hello@orourkehospitality.com</a>
			</address>
			<div class="social">
				{% for item in ['facebook','twitter','linkedin'] %}
					<a href="#"><i class="icon-{{ item }}"></i></a>
				{% endfor %}
			</div>
		</div>
		<div class="column medium-8 text-right">
			{% include 'templates/newsletter.twig' %}
			<ul class="menu footer-submenu align-right">
				{% for item in footer_submenu.get_items %}
					<li>
						<a href="{{item.get_link}}">{{ item.title }}</a>
					</li>
				{% endfor %}
			</ul>
		</div>
	</div>
</footer>

{{ function('wp_footer') }}
